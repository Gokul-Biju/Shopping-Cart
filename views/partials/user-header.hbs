<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/user">Shopping Cart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/user">Products</a>
                    </li>
                    {{#if data}}
                    <li class="nav-item">
                        <a class="nav-link" href="/user/view-orders">Orders</a>
                    </li>
                    {{/if}}
                    <li class="nav-item">
                        <a class="nav-link" href="/user/cart">Cart<span style="font-size: 8.5px;" id="cart-count" class="badge badge-light rounded-circle f-2 bg-success">{{count}}</span></a>
                    </li>
                </ul>

                <div class="dropdown me-5">
                    <button class="btn btn-outline-dark dropdown-toggle" style="width: 160px;" type="button" id="dropdownMenuButton" 
                        data-bs-toggle="dropdown" aria-expanded="false">
                        {{#if data}}
                           {{data.username}}
                        {{else}}
                            Account
                        {{/if}}
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {{#if data}}
                          <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
                        {{else}}
                          <li><a class="dropdown-item" href="/user/login">Login</a></li>
                          <li><a class="dropdown-item" href="/user/register">Register</a></li>
                        {{/if}}
                        
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-5">
    <a href="admin/addproduct" class="btn btn-primary" style="margin-left: 90%;margin-bottom: 30px;">Add products</a>
<table class="table" id="myTable">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img src="/images/{{this._id}}.jpg" alt="" style="width: 50px;height: 50px"></td>
      <td><a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">Edit</a>
       <a href="/admin/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

<script> 
$(document).ready(function () {
    $('#myTable').DataTable();
});

</script>